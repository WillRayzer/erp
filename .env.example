# ==========================================
# SISTEMA DE CONTROLE DE ESTOQUE
# Configurações de Ambiente
# ==========================================

# ===== BANCO DE DADOS =====
# MongoDB Atlas (Recomendado)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/stock-control?retryWrites=true&w=majority

# MongoDB Local (Alternativo)
# MONGODB_URI=mongodb://localhost:27017/stock-control

# ===== SEGURANÇA =====
# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=30d

# ===== SERVIDOR =====
PORT=5000
NODE_ENV=development

# ===== INTEGRAÇÃO OPENAI =====
# Obtenha sua chave em: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key-here

# ===== CONFIGURAÇÃO DE EMAIL =====
# Para recuperação de senha e notificações
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# ===== UPLOAD DE ARQUIVOS =====
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760

# ===== CORS =====
# URL do frontend para CORS
FRONTEND_URL=http://localhost:3000

# ===== REDIS (Opcional - para cache) =====
REDIS_URL=redis://localhost:6379

# ===== MONITORAMENTO =====
# Sentry DSN (opcional para monitoramento de erros)
# SENTRY_DSN=your-sentry-dsn-here

# ===== BACKUP =====
# Configurações de backup automático
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30